#include <dt-bindings/zmk/matrix_transform.h>

/ {
	chosen {
		zephyr,display = &oled;
		zmk,matrix_transform = &default_transform;
		zmk,underglow = &led_strip;
	};

	default_transform: keymap_transform_0 {
		compatible = "zmk,matrix-transform";
		columns = <12>;
		rows = <4>;
// | SW1  | SW2  | SW3  | SW4  | SW5  |									  | SW5  | SW4  | SW3  | SW2  | SW1  |
// | SW6  | SW7  | SW8  | SW9  | SW10 |									  | SW10 | SW9  | SW9  | SW7  | SW6  |
// | SW11 | SW12 | SW13 | SW14 | SW15 |									  | SW15 | SW14 | SW13 | SW12 | SW11 |
// 		  | SW16 | SW17 | SW18 | SW19 | SW20 | SW21 |		| SW21 | SW20 | SW19 | SW18 | SW17 | SW16 |
		map = <
RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)										RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)										RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)										RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
		RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)		RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
		>;
	};

	kscan0: kscan {
		compatible = "zmk,kscan-gpio-matrix";
		label = "KSCAN";
		diode-direction = "col2row";
	};

	left_encoder: encoder_left {
		compatible = "alps,ec11";
		label = "LEFT_ENCODER";
		a-gpios = <&gpio1 13 GPIO_PULL_UP>;
		b-gpios = <&gpio1 15 GPIO_PULL_UP>;
		resolution = <4>;
	};

	right_encoder: encoder_right {
		compatible = "alps,ec11";
		label = "RIGHT_ENCODER";
		a-gpios = <&gpio1  6 GPIO_PULL_UP>;
		b-gpios = <&gpio1  4 GPIO_PULL_UP>;
		resolution = <4;
	};

	sensors {
		compatible = "zmk,keymap-sensors";
		sensors = <&left_encoder &right_encoder>;
	};

};

&pro_micro_i2c {
	status = "okay";

	oled: ssd1306@3c {
		compatible = "solomon,ssd1306fb";
		reg = <0x3c>;
		label = "DISPLAY";
		width = <128>;
		height = <32>;
		segment-offset = <0>;
		page-offset = <0>;
		display-offset = <0>;
		multiplex-ratio = <31>;
		segment-remap;
		com-invdir;
		com-sequential;
		prechargep = <0x22>;
	};
};
